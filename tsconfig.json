{
  "compilerOptions": {
    "target": "es6",// 转译成es6代码
    "module": "esnext", //模块选择es6
    "outDir": "bin",  // 输出到bin目录下
    "moduleResolution": "node", //模块解析方式
    "esModuleInterop": true, // 模块转换
    "resolveJsonModule": true, // 允许解析成json
    "rootDir": "src",// 根目录src  就是将src目录下的内容输出到bin目录下
    "baseUrl": "./src", // 
  },
  "include": ["src"],//src 目录为源代码目录
  "exclude": ["node_modules"]
}